<resources>
    <style name="ButtonStyle" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:layout_margin">@dimen/padding_small</item>
        <item name="android:background">@drawable/round_corner_button</item>
    </style>
    <style name="ButtonStyle2" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:layout_margin">@dimen/padding_small</item>
        <item name="android:background">@drawable/round_corner_button_2</item>
    </style>
    <style name="TextLabel" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">16sp</item>
    </style>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme_NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextInputLayoutStyle">
        <item name="android:padding">@dimen/padding_small</item>
        <item name="android:layout_margin">@dimen/padding_small</item>
        <item name="android:textColorHint">@color/colorPrimary</item>
    </style>

</resources>
