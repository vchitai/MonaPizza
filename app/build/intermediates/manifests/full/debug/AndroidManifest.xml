            android:theme="@style/AppTheme_NoActionBar" >
        </activity>
        <activity
            android:name="com.monapizza.monapizza.ui.SignupActivity"
            android:parentActivityName="com.monapizza.monapizza.ui.WelcomeActivity"
            android:theme="@style/AppTheme_NoActionBar" >
        </activity>
        <activity android:name="com.monapizza.monapizza.ui.ExamActivity" >
        </activity>
        <activity
            android:name="com.monapizza.monapizza.ui.AccountManagerActivity"
            android:parentActivityName="com.monapizza.monapizza.ui.MainActivity" >
        </activity>

        <meta-data
            android:name="android.support.VERSION"
            android:value="25.4.0" />
    </application>

</manifest>