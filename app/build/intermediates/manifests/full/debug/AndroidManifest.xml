        <activity
            android:name="com.monapizza.monapizza.ui.LessonsActivity"
            android:parentActivityName="com.monapizza.monapizza.ui.MainActivity"
            android:theme="@style/AppTheme_NoActionBar" >
        </activity>
        <activity
            android:name="com.monapizza.monapizza.ui.QuizActivity"
            android:theme="@style/AppTheme_NoActionBar" >
        </activity>
        <activity
            android:name="com.monapizza.monapizza.ui.WelcomeActivity"
            android:theme="@style/AppTheme_NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.monapizza.monapizza.ui.GuestLoginActivity"
            android:parentActivityName="com.monapizza.monapizza.ui.WelcomeActivity"
            android:theme="@style/AppTheme_NoActionBar" >
